// necessary for recognizing our path alias defined in webpack.config.js
{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components": ["components/index"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks/index"],
      "@hooks/*": ["hooks/*"],
      "@utils": ["utils/index"],
      "@utils/*": ["utils/*"],
      "@constants": ["constants/index"],
      "@constants/*": ["constants/*"],
      "@customTypes": ["customTypes/index"],
      "@customTypes/*": ["customTypes/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
